<project name="mirth-client" basedir="." default="help">
	<target name="help">
		<echo>Mirth Client Build Help</echo>
		<echo>-----------------------</echo>
	</target>

	<target name="init">
		<property file="build.properties" />

		<path id="classpath">
			<fileset dir="${lib}" includes="*.jar" />
		</path>

		<mkdir dir="${logs}" />
	</target>

	<target name="clean" depends="init">
		<delete dir="${classes}" />
		<delete dir="${dist}" />
	</target>

	<target name="compile" depends="clean, init">
		<mkdir dir="${classes}" />
		<javac srcdir="${src}" destdir="${classes}" debug="${javac.debug}" verbose="${javac.verbose}" deprecation="${javac.deprecation}" optimize="${javac.optimize}">
			<classpath refid="classpath" />
		</javac>

		<copy todir="${classes}" file="${src}/log4j.properties" />
		
		<!-- copy the image files so they will be included in jar -->
		<copy todir="${classes}/com/webreach/mirth/client/ui/images">
			<fileset dir="${src}/com/webreach/mirth/client/ui/images" />
		</copy>
	</target>

	<target name="create-client" depends="compile">
		<mkdir dir="${dist}" />
		<mkdir dir="${dist.source}" />

		<jar destfile="${dist}/${client.jar}">
			<fileset dir="${classes}">
				<exclude name="com/webreach/mirth/connectors/**/**" />
			</fileset>
			<fileset dir="${classes}">
				<include name="com/webreach/mirth/connectors/ConnectorClass.class" />
			</fileset>
		</jar>
		
		<jar destfile="${dist}/doc-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/doc/**" />
		</jar>
		
		<jar destfile="${dist}/email-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/email/**" />
		</jar>
		
		<jar destfile="${dist}/file-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/file/**" />
		</jar>
		
		<jar destfile="${dist}/ftp-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/ftp/**" />
		</jar>
		
		<jar destfile="${dist}/http-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/http/**" />
		</jar>
		
		<jar destfile="${dist}/jdbc-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/jdbc/**" />
		</jar>
		
		<jar destfile="${dist}/jms-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/jms/**" />
		</jar>
		
		<jar destfile="${dist}/mllp-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/mllp/**" />
		</jar>
		
		<jar destfile="${dist}/sftp-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/sftp/**" />
		</jar>
		
		<jar destfile="${dist}/soap-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/soap/**" />
		</jar>
		
		<jar destfile="${dist}/tcp-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/tcp/**" />
		</jar>
		
		<jar destfile="${dist}/vm-client.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/vm/**" />
		</jar>
		
		<!-- copy source files -->
		<copy todir="${dist.source}">
			<fileset dir="${src}">
				<exclude name="**/*.form" />
			</fileset>
		</copy>

		<!-- remove svn folders -->
		<delete>
			<fileset dir="${dist.source}" includes="**/.svn" />
		</delete>

		<zip basedir="${dist.source}" destfile="${dist}/mirth-client-src.zip" />
		<delete dir="${dist.source}" />
	</target>
</project>