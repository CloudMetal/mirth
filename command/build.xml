<project name="mirth-cli" basedir="." default="build">
	<target name="init">
		<property file="build.properties" />

		<path id="classpath">
			<fileset dir="${lib}" includes="*.jar" />
		</path>
	</target>

	<target name="clean" depends="init">
		<delete dir="${classes}" />
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

	<target name="compile" depends="clean, init">
		<mkdir dir="${classes}" />

		<javac srcdir="${src}" destdir="${classes}" debug="${javac.debug}" verbose="${javac.verbose}" deprecation="${javac.deprecation}" target="${javac.target}" source="${javac.source}">
			<classpath refid="classpath" />
		</javac>
	</target>

	<target name="build" depends="compile">
		<mkdir dir="${build}" />

		<!-- log4j.properties file -->
		<mkdir dir="${build}/conf" />

		<copy todir="${build}/conf">
			<fileset dir="${conf}" />
		</copy>

		<!-- cli-lib -->
		<mkdir dir="${build}/cli-lib" />

		<copy todir="${build}/cli-lib">
			<fileset dir="${lib}" />
		</copy>

		<jar destfile="${build}/${cli.jar}" basedir="${classes}">
			<manifest>
				<attribute name="Manifest-Version" value="1.0" />
				<attribute name="Main-Class" value="com.mirth.connect.cli.CommandLineInterface" />
				<attribute name="Class-Path" value="cli-lib/mirth-client-core.jar cli-lib/mirth-model-1.0.jar cli-lib/log4j-1.2.15.jar cli-lib/commons-logging-1.1.1.jar cli-lib/commons-codec-1.4.jar cli-lib/commons-httpclient-3.0.1.jar cli-lib/commons-cli-1.2.jar cli-lib/commons-lang-2.4.jar cli-lib/xstream-1.3.jar cli-lib/xpp3_min-1.1.4c.jar conf/" />
			</manifest>
		</jar>
	</target>

	<target name="dist" depends="build">
		<mkdir dir="${dist}" />
		<zip destfile="${dist}/mirthconnect-cli-${version}.zip" basedir="${build}" includes="**/*" />
	</target>
</project>