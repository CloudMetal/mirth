<project name="mirth-manager" basedir="." default="help">
	<target name="help">
		<echo>Mirth Manager Build Help</echo>
		<echo>-----------------------</echo>
	</target>

	<target name="init">
		<property file="build.properties" />

		<path id="classpath">
			<fileset dir="${lib}" includes="*.jar" />
		</path>

		<mkdir dir="${logs}" />
	</target>

	<target name="clean" depends="init">
		<delete dir="${classes}" />
		<delete dir="${dist}" />
	</target>

	<target name="compile" depends="clean, init">
		<mkdir dir="${classes}" />
		<javac srcdir="${src}" destdir="${classes}" debug="${javac.debug}" verbose="${javac.verbose}" deprecation="${javac.deprecation}" optimize="${javac.optimize}">
			<classpath refid="classpath" />
		</javac>
		
		<!-- copy the image files so they will be included in jar -->
		<copy todir="${classes}/com/webreach/mirth/manager/images">
			<fileset dir="${src}/com/webreach/mirth/manager/images" />
		</copy>
	</target>

	<target name="create-manager" depends="compile">
		<mkdir dir="${dist}" />
		<mkdir dir="${dist.source}" />
		
		<manifest file="MANIFEST.MF">
			<attribute name="Manifest-Version" value="1.0"/>
			<attribute name="Main-Class" value="com.webreach.mirth.manager.Manager"/>
			<attribute name="Class-Path" value="lib/jdic.jar lib/swing-layout-1.0.1.jar lib/looks-2.1.1.jar"/>
		</manifest>
		
		<jar destfile="${dist}/${manager.jar}" manifest="MANIFEST.MF" basedir="${classes}" />

		<!-- copy source files -->
		<copy todir="${dist.source}">
			<fileset dir="${src}">
				<exclude name="**/*.form" />
			</fileset>
		</copy>

		<!-- remove svn folders -->
		<delete>
			<fileset dir="${dist.source}" includes="**/.svn" />
		</delete>

		<zip basedir="${dist.source}" destfile="${dist}/mirth-manager-src.zip" />
		<delete dir="${dist.source}" />
	</target>
</project>