<project name="mirth-manager" basedir="." default="help">
	<target name="help">
		<echo>Mirth Manager Build Help</echo>
		<echo>-----------------------</echo>
	</target>

	<target name="init">
		<property file="build.properties" />

		<path id="classpath">
			<fileset dir="${lib}" includes="*.jar" />
		</path>

		<mkdir dir="${logs}" />
	</target>

	<target name="clean" depends="init">
		<delete dir="${classes}" />
		<delete dir="${dist}" />
	</target>

	<target name="compile" depends="clean, init">
		<mkdir dir="${classes}" />
		<javac srcdir="${src}" destdir="${classes}" debug="${javac.debug}" verbose="${javac.verbose}" deprecation="${javac.deprecation}" target="${javac.target}" source="${javac.source}">
			<classpath refid="classpath" />
		</javac>

		<!-- copy the image files so they will be included in jar -->
		<copy todir="${classes}/com/webreach/mirth/manager/images">
			<fileset dir="${src}/com/webreach/mirth/manager/images" />
		</copy>
	</target>

	<target name="create-manager" depends="compile">
		<mkdir dir="${dist}" />
		<mkdir dir="${dist.source}" />

		<jar destfile="${dist}/${manager.jar}" basedir="${classes}">
			<manifest>
				<attribute name="Manifest-Version" value="1.0" />
				<attribute name="Main-Class" value="com.webreach.mirth.manager.Manager" />
				<attribute name="Class-Path" value="lib/jdic.jar lib/looks-2.2.2.jar lib/swing-layout.jar lib/commons-codec-1.3.jar lib/commons-httpclient-3.0.1.jar lib/commons-logging-1.1.jar lib/log4j-1.2.13.jar lib/swingworker.jar lib/xstream-1.2.2.jar conf/ mirth-client-core.jar" />
			</manifest>
		</jar>

		<!-- copy source files -->
		<copy todir="${dist.source}">
			<fileset dir="${src}">
				<exclude name="**/*.form" />
			</fileset>
		</copy>

		<!-- remove svn folders -->
		<delete>
			<fileset dir="${dist.source}" includes="**/.svn" />
		</delete>

		<zip basedir="${dist.source}" destfile="${dist}/mirth-manager-src.zip" />
		<delete dir="${dist.source}" />
	</target>
</project>