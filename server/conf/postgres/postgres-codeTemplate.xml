<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"conf/sql-map-2.dtd">

<sqlMap namespace="CodeTemplate">
	<parameterMap class="com.webreach.mirth.model.CodeTemplate" id="insert-code-template-param">
		<parameter property="id" />
		<parameter property="name" />
		<parameter property="scope" />
		<parameter property="type" />
		<parameter property="tooltip" />
		<parameter property="code"/>
	</parameterMap>

	<resultMap class="com.webreach.mirth.model.CodeTemplate" id="get-code-template-result">
		<result property="id" column="ID" />
		<result property="name" column="NAME" />
		<result property="scope" column="CODE_SCOPE" />		
		<result property="type" column="CODE_TYPE" />
		<result property="tooltip" column="TOOLTIP" />
		<result property="code" column="CODE" />
	</resultMap>
	
	<select id="getCodeTemplate" parameterClass="com.webreach.mirth.model.CodeTemplate" resultMap="get-code-template-result">
		SELECT C.ID, C.NAME, C.CODE_SCOPE, C.CODE_TYPE, C.TOOLTIP, C.CODE
		FROM CODE_TEMPLATE C
		<dynamic prepend="WHERE">
			<isNotNull prepend="AND" property="id">
				C.ID = #id#
			</isNotNull>
		</dynamic>
	</select>

	<insert id="insertCodeTemplate" parameterMap="insert-code-template-param">
		INSERT INTO CODE_TEMPLATE (ID, NAME, CODE_SCOPE, CODE_TYPE, TOOLTIP, CODE)
		VALUES (?, ?, ?, ?, ?, ?)
	</insert>

	<delete id="deleteCodeTemplate" parameterClass="com.webreach.mirth.model.CodeTemplate">
		DELETE FROM CODE_TEMPLATE
		<dynamic prepend="WHERE">
			<isNotNull prepend="AND" property="id">
				ID=#id#
			</isNotNull>
		</dynamic>
	</delete>
</sqlMap>