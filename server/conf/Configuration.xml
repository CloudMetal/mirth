<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap
PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Configuration">
	<resultMap class="com.webreach.mirth.model.Transport" id="get-transport-result">
		<result property="name" column="NAME" />
		<result property="className" column="CLASS_NAME" />
		<result property="protocol" column="PROTOCOL" />
		<result property="transformers" column="TRANSFORMERS" />
		<result property="type" column="TYPE" />
		<result property="inbound" column="INBOUND" />		
		<result property="outbound" column="OUTBOUND" />								
	</resultMap>

	<resultMap class="com.webreach.mirth.model.Configuration" id="get-configuration-result">
		<result property="id" column="ID" />
		<result property="dateCreated" column="DATE_CREATED" />
		<result property="data" column="DATA" />
	</resultMap>

	<select id="getKey" resultClass="java.lang.String">
		SELECT DATA
		FROM KEY;
	</select>

	<insert id="insertKey" parameterClass="java.lang.String">
		INSERT INTO
		KEY (DATA)
		VALUES (#data#);
	</insert>

	<select id="getTransports" resultClass="com.webreach.mirth.model.Transport" resultMap="get-transport-result">
		SELECT *
		FROM TRANSPORT;
	</select>

	<select id="getLatestConfiguration" resultClass="com.webreach.mirth.model.Configuration">
		SELECT *
		FROM CONFIGURATION
		WHERE DATE_CREATED IN
			(SELECT MAX(DATE_CREATED)
			FROM CONFIGURATION);
	</select>
	
	<delete id="deleteLatestConfiguration">
		DELETE FROM CONFIGURATION
		WHERE DATE_CREATED IN
			(SELECT MAX(DATE_CREATED)
			FROM CONFIGURATION);
	</delete>
	
	<insert id="insertConfiguration" parameterClass="java.lang.String">
		INSERT INTO
		CONFIGURATION (DATA)
		VALUES (#data#)
	</insert>
</sqlMap>