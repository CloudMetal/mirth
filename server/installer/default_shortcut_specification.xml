<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <programGroup defaultName="Mirth" location="applications" />
  
  <shortcut
    name="Mirth Server"
    target="$INSTALL_PATH\Mirth.exe" 
    workingDirectory="$INSTALL_PATH"
    description="Start the Mirth Server"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Core" />
  </shortcut>
  
  <shortcut
    name="Mirth Administrator"
    target="javaws" 
    commandLine="http://localhost:8080/webstart"
    workingDirectory="$INSTALL_PATH"
    description="Start the Mirth Administrator"
    iconFile="$INSTALL_PATH\Mirth.ico"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Core" />
  </shortcut>
  
  <shortcut
    name="Mirth Shell"
    target="$INSTALL_PATH\Shell.bat" 
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Start Mirth Shell"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Shell" />
  </shortcut>

  <shortcut
    name="Mirth Server Manager"
    target="$INSTALL_PATH\Mirth Manager.exe" 
    workingDirectory="$INSTALL_PATH"
    description="Start the Mirth Server Manager"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="yes">
    <createForPack name="Server Manager" />
  </shortcut>

</shortcuts>