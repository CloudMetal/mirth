			</fileset>
		</jar>

		<jar destfile="${connectors}/https-shared.jar" basedir="${classes}">
			<include name="com/webreach/mirth/connectors/https/HTTPSListenerProperties.class" />
			<include name="com/webreach/mirth/connectors/https/HTTPSSenderProperties.class" />
		</jar>
        <jar destfile="${connectors}/https-server.jar">
			<fileset dir="${classes}">
				<include name="com/webreach/mirth/connectors/https/**" />
				<exclude name="com/webreach/mirth/connectors/https/HTTPSListenerProperties.class" />
				<exclude name="com/webreach/mirth/connectors/https/HTTPSSenderProperties.class" />
