<connectorMetaData path="smtp">
	<name>Email Sender</name>
	<author>Mirth Corporation</author>
	<pluginVersion>@mirthversion</pluginVersion>
	<mirthVersion>2.1.0</mirthVersion>
	<url>http://www.mirthcorp.com</url>
	<description>This connector allows Mirth Connecto to send email messages via SMTP. A template is available to dynamically create messages.</description>
	<clientClassName>com.mirth.connect.connectors.email.EmailSender</clientClassName>
	<serverClassName>com.mirth.connect.connectors.email.EmailConnector</serverClassName>
	<sharedClassName>com.mirth.connect.connectors.email.EmailSenderProperties</sharedClassName>
	<library type="CLIENT" path="smtp-client.jar" />
	<library type="SHARED" path="smtp-shared.jar" />
	<library type="SERVER" path="smtp-server.jar" />
	<transformers></transformers>
	<protocol>smtp</protocol>
	<type>DESTINATION</type>
	<enabled>true</enabled>
	<mule-properties>
		<property name="connector">com.mirth.connect.connectors.email.EmailConnector</property>
		<property name="dispatcher.factory">com.mirth.connect.connectors.email.EmailMessageDispatcherFactory</property>
	</mule-properties>
</connectorMetaData>